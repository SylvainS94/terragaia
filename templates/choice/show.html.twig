{% extends 'base.html.twig' %}

{% block title %}Type de RDV{% endblock %}

{% block body %}
    <h1>Type de RDV</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre du Type</th>
                <td>{{ choice.title }}</td>
            </tr>
            <tr>
                <th>N°Id</th>
                <td>{{ choice.id }}</td>
            </tr>
        </tbody>
    </table>

    <hr>
    <div class="text-center mx-auto my-2">
        <p class="col-12"><a href="{{ path('app_choice_index') }}" class="btn btn-view" title="Retour vers Liste"><i class="fa-solid fa-circle-arrow-left fa-beat mx-2"></i>Retour</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto">
        <p class=" col-12"><a href="{{ path('app_choice_edit', {'id': choice.id}) }}"class="btn btn-warning" title="Modifier mon type de RDV"><i class="fa fa-edit fa-beat mx-2"></i>Modifier</a></p>
    </div>
    <hr> 
    <div class="text-center mx-auto my-2">
        <h5 class="col-12">Supprimer ce Type de RDV*</h5>
        {{ include('choice/_delete_form.html.twig') }}
        <p class="col-12">*Attention ! toute suppression est définitive.</p>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Disponibilité{% endblock %}

{% block body %}
    <h1>Disponibilité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Jour</th>
                <td>{{ disponibility.dateSlot }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ disponibility.hourSlot ? disponibility.hourSlot|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>N°Id</th>
                <td>{{ disponibility.id }}</td>
            </tr>
        </tbody>
    </table>

    <hr>
    <div class="text-center mx-auto my-2">
        <p class="col-12"><a href="{{ path('app_disponibility_index') }}" class="btn btn-view" title="Retour vers Liste"><i class="fa-solid fa-circle-arrow-left fa-beat mx-2"></i>Retour</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto">
        <p class=" col-12"><a href="{{ path('app_disponibility_edit', {'id': disponibility.id}) }}"class="btn btn-warning" title="Modifier la Disponibilité"><i class="fa fa-edit fa-beat mx-2"></i>Modifier</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto my-2">
        <h5 class="col-12">Supprimer la disponibilité*</h5>
        {{ include('disponibility/_delete_form.html.twig') }}
        <p class="col-12">*Attention ! toute suppression est définitive.</p>
    </div>
    <hr>
{% endblock %}

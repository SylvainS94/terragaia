{% extends 'base.html.twig' %}

{% block title %}Mon Commentaire{% endblock %}

{% block body %}
    <h1>Mon Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Coaching/Accompagnement</th>
                <td>{{ commentary.service }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ commentary.comment }}</td>
            </tr>
            <tr>
                <th>N°Id</th>
                <td>{{ commentary.id }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ commentary.createdAt ? commentary.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ commentary.updatedAt ? commentary.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <hr>
    <div class="text-center mx-auto my-2">
        <a href="{{ path('app_user_show_commentaries', {'id': commentary.id}) }}" class="btn btn-view" title="Retour Liste"><i class="fa-solid fa-circle-arrow-left mx-2 fa-beat"></i>Retour</a>
    </div>
    <hr>
    <div class="text-center mx-auto my-2">
        <a href= "{{ path('app_user_update_commentary', {'id': commentary.id}) }}"class="btn btn-warning" title="Modifier mon Commentaire"><i class="fa fa-edit fa-beat mx-2"></i>Modifier</a>
    </div>
    <hr>
   <div class="col -12 text-center mx-auto">
        <form method="post" action="{{ path('app_user_delete_commentary', {'id': commentary.id}) }}" onsubmit="return confirm('Etes vous certain de vouloir supprimer définitivement ce Commentaire ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentary.id) }}">
            <button class="btn btn-danger"><i class="fa fa-trash fa-beat mx-2"></i>Supprimer</button>
        </form>
    </div>
    <hr>

{% endblock %}

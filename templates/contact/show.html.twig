{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.user.firstname }}</td> 
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.user.lastname }}</td> 
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.user.email }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ contact.title }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>N°Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ contact.updatedAt ? contact.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <hr>
    <div class="text-center mx-auto my-2">
        <p class="col-12"><a href="{{ path('app_contact_index') }}" class="btn btn-view" title="Retour vers Liste"><i class="fa-solid fa-circle-arrow-left fa-beat mx-2"></i>Retour</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto">
        <p class=" col-12"><a href="{{ path('app_contact_edit', {'id': contact.id}) }}"class="btn btn-warning" title="Modifier le Message"><i class="fa fa-edit fa-beat mx-2"></i>Modifier</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto my-2">
        <h5 class="col-12">Supprimer le Message*</h5>
        {{ include('contact/_delete_form.html.twig') }}
        <p class="col-12">*Attention ! toute suppression est définitive.</p>
    </div>
    <hr>
{% endblock %}

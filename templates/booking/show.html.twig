{% extends 'base.html.twig' %}

{% block title %}RDV d'Information ou Séance de Coaching/Accompagnement{% endblock %}

{% block body %}
    <h1>RDV d'Information ou Séance de Coaching/Accompagnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Type de RDV</th>
                <td>{{ booking.choices.title }}</td>
            </tr>
            <tr>
                <th>Coaching/Accompagnement</th>
                <td>{{ booking.services.title }}</td>
            </tr>
            <tr>
                <th>Jour du RDV</th>
                <td>{{ booking.disponibility.dateslot }}</td>
            </tr>
            <tr>
                <th>Heure du RDV</th>
                <td>{{ booking.disponibility.hourslot.format('H:i')}}</td>
            </tr>
            <tr>
                <th>Identité</th>
                <td>{{ booking.user.firstname }} {{ booking.user.lastname }}</td>
            </tr>
                <th>Message</th>
                <td>{{ booking.message }}</td>
            </tr>
            <tr>
                <th>N°Id</th>
                <td>{{ booking.id }}</td>
            </tr>
        </tbody>
    </table>

    <hr>
    <div class="text-center mx-auto my-2">
        <p class="col-12"><a href="{{ path('app_booking_index') }}" class="btn btn-view" title="Retour vers Liste"><i class="fa-solid fa-circle-arrow-left fa-beat mx-2"></i>Retour</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto my-2">
        <h5 class="col-12">Supprimer mon RDV d'Information ou ma  de Coaching/Accompagnement*</h5>
        {{ include('booking/_delete_form.html.twig') }}
        <p class="col-12">*Attention ! toute suppression est définitive.</p>
    </div>
    <hr>
{% endblock %}

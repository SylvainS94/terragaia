{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Coaching</th>
                <td>{{ commentary.service.title }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ commentary.author.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ commentary.author.lastname }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ commentary.comment }}</td>
            </tr>
            <tr>
                <th>N°Id</th>
                <td>{{ commentary.id }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ commentary.createdAt ? commentary.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ commentary.updatedAt ? commentary.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    
    <hr>
    <div class="text-center mx-auto my-2">
        <p class="col-12"><a href="{{ path('app_commentary_index') }}" class="btn btn-view" title="Retour vers Liste"><i class="fa-solid fa-circle-arrow-left fa-beat mx-2"></i>Retour</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto my-2">
        <h5 class="col-12">Supprimer le Commentaire*</h5>
        {{ include('commentary/_delete_form.html.twig') }}
        <p class="col-12">*Attention ! toute suppression est définitive.</p>
    </div>
    <hr>
{% endblock %}

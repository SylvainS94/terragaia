{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="col-12">Tableau de Bord Administrateur</h1>
    
    <div class="row mt-3 text-center">
        <h2 class="col-10">Gestion des fonctionnalités: Contenus, Utilisateurs, RDVs, Disponibilités, Devis, Messages, et Commentaires :</h2>
    </div>

    <div class="row mt-3">
        {% include 'include/_flashes.html.twig' %}
    </div>

    <hr>
    <h1 class="col-8">Contenus</h1>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des Catégories de Coachings : {{ totalCategories }}</h5> 
            <a href="{{ path('app_category_index') }}" class="btn btn-info mt-2" title="Voir les Catégories de coaching"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a>
        </div> 
    </div>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des Coachings/Accompagnements : {{ totalServices }}</h5>
            <a href="{{ path('app_service_index') }}" class="btn btn-info mt-2" title="Voir les types de Coachings"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a> 
        </div> 
    </div>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des Thèmes Qui suis-je ? : {{ totalThemes }}</h5>
            <a href="{{ path('app_theme_index') }}" class="btn btn-info mt-2" title="Voir les Thèmes qui suis je ?"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a> 
        </div> 
    </div>
    <hr>

    <h1 class="col-8">Utilisateurs</h1>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des Utilisateurs Inscrits : {{ totalUsers }}</h5>
            <a href="{{ path('app_user_index') }}" class="btn btn-info mt-2" title="Voir les Utilisateurs"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a>
        </div> 
    </div>
    <hr>
    
    <h1 class="col-8">RDVs et Disponibilités</h1>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des RDVs pris : {{ totalBookings }}</h5>
            <a href="{{ path('app_booking_index') }}" class="btn btn-info mt-2" title="Voir les RDVs envoyés et reçus"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a> 
        </div> 
    </div>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des Disponibilités en ligne : {{ totalDisponibilities }}</h5>
            <a href="{{ path('app_disponibility_index') }}" class="btn btn-info mt-2" title="Voir les Disponibilités en ligne"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a> 
        </div> 
    </div>
    <hr>

    <h1 class="col-8">Devis</h1>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des Devis envoyés : {{ totalBills }}</h5>
            <a href="{{ path('app_bill_index') }}" class="btn btn-info mt-2" title="Voir les Devis envoyés"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a> 
        </div> 
        <hr>
    </div>
    <hr>

    <h1 class="col-8">Messages</h1>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des Messages reçus et envoyés : {{ totalContacts }}</h5>
            <a href="{{ path('app_contact_index') }}" class="btn btn-info mt-2" title="Voir les messages envoyés et reçus"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a> 
        </div> 
    </div>
    <hr>

    <h1 class="col-8">Commentaires</h1>
    <div class="row">
        <div class="card-dashboard col-6">
            <h5 class="col-12">Total des Commentaires reçus : {{ totalCommentaries }}</h5>
            <a href="{{ path('app_commentary_index') }}" class="btn btn-info mt-2" title="Voir les commentaires en ligne"><i class="fa fa-magnifying-glass fa-beat mx-2"></i> Voir</a> 
        </div> 
    </div>

{% endblock %}
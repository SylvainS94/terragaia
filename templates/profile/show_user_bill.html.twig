{% extends 'base.html.twig' %}

{% block title %}Mon Devis{% endblock %}

{% block body %}
    <h1>Mon Devis</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom du fichier .pdf</th>
                <td>{{ bill.content }}</td>
            </tr>
            <tr>
                <th>Votre Identité</th>
                <td>{{ bill.user.firstname}} {{ bill.user.lastname}}</td>
            </tr>
             <tr>
                <th>Votre Email</th>
                <td>{{ bill.user.email }}</td>
            </tr>
            <tr>
                <th>N°Id</th>
                <td>{{ bill.id }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ bill.createdAt ? bill.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ bill.updatedAt ? bill.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    
    <hr>
    <div class="text-center mx-auto my-2">
        <a href="{{ path('app_user_show_bills', {'id': bill.id}) }}" class="btn btn-view" title="Retour Liste"><i class="fa-solid fa-circle-arrow-left mx-2 fa-beat"></i>Retour</a>
    </div>
    <hr>
    <div class="text-center mx-auto my-2">
        <a href= "{{ asset ('uploads/') ~ bill.content }}" alt="{{ bill.id }}"class="btn btn-info" title="Voir mon devis" target="_blank"><i class="fa fa-magnifying-glass fa-beat mx-2"></i>Voir</a>
    </div>
    <hr>
    <div class="text-center mx-auto my-2">
        <a href= "{{ asset ('uploads/') ~ bill.content }}" download class="btn btn-warning" title="Télécharger mon devis"><i class="fa fa-download mx-2 fa-beat"></i>Télécharger</a>
    </div>
    <hr>
    
{% endblock %}


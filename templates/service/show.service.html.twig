{% extends 'base.html.twig' %}

{% block title %}Coaching/Accompagnement{% endblock %}

{% block body %}
    <h1>Coaching/Accompagnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Catégorie de Clients</th>
                <td>{{ service.category.title }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ service.title }}</td>
            </tr>
            <tr>
                <th>Sous-titre</th>
                <td>{{ service.subtitle }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ service.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ service.picture }}</td>
            </tr>
             <tr>
                <th>Déroulement</th>
                <td>{{ service.progress }}</td>
            </tr>
            <tr>
                <th>Clientèle ciblée</th>
                <td>{{ service.target }}</td>
            </tr>
            <tr>
                <th>Nombre de séances minimum</th>
                <td>{{ service.sessionmin }}</td>
            </tr>
            <tr>
                <th>Nombre de séances maximum</th>
                <td>{{ service.sessionmax }}</td>
            </tr>
            <tr>
                <th>Durée 1 séance</th>
                <td>{{ service.duration }}</td>
            </tr>
            <tr>
                <th>Rythme Séances/Semaine</th>
                 <td>{{ service.rythm }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ service.price }}</td>
            </tr>
            <tr>
                <th>Modalités</th>
                <td>{{ service.modality }}</td>
            </tr>
            <tr>
                <th>N°Id</th>
                <td>{{ service.id }}</td>
            </tr>

        </tbody>
    </table>

    <hr>
    <div class="text-center mx-auto my-2">
        <p class="col-12"><a href="{{ path('app_service_index') }}" class="btn btn-view" title="Retour vers Liste"><i class="fa-solid fa-circle-arrow-left fa-beat mx-2"></i>Retour</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto">
        <p class=" col-12"><a href="{{ path('app_service_edit', {'id': service.id}) }}"class="btn btn-warning" title="Modifier ce Coaching"><i class="fa fa-edit fa-beat mx-2"></i>Modifier</a></p>
    </div>
    <hr>
    <div class="text-center mx-auto my-2">
        <h5 class="col-12">Supprimer le Coaching*</h5>
        {{ include('service/_delete_form.html.twig') }}
        <p class="col-12">*Attention ! toute suppression est définitive.</p>
    </div>
    <hr>
{% endblock %}
